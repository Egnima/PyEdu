<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    
    xmlns:themes="clr-namespace:FolderBrowser.Themes"
    xmlns:options="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
  >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/FolderBrowser;component/Images/MetroDarkIcons.xaml" />
        <!-- ResourceDictionary Source="/UserNotification;component/Themes/DarkBrushs.xaml" / !-->
        <ResourceDictionary Source="/InplaceEditBoxLib;component/Themes/DarkBrushs.xaml" />
    </ResourceDictionary.MergedDictionaries>


    <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.DropDownBackgroundKey}" Color="#2d2d30" options:Freeze="true" />
    <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.DialogBackgroundKey}" Color="#2d2d30" options:Freeze="true" />

    <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.TreeViewBackgroundKey}" Color="#252526" options:Freeze="true" />

    <SolidColorBrush x:Key="{x:Static themes:ResourceKeys.DialogForegroundKey}" Color="#FFF4F4F5" options:Freeze="true" />

</ResourceDictionary>
