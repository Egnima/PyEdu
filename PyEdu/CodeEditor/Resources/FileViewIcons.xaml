<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 16 pixel refresh command icon -->
    <BitmapImage x:Key="FLV_Image_Refresh" UriSource="pack://application:,,,/CodeEditor;component/Resources/Images/FileView/refresh.png" />

    <!-- 16 pixel Toggle folder Visible command -->
    <BitmapImage x:Key="FLV_Image_IsFoldersVisible" UriSource="pack://application:,,,/CodeEditor;component/Resources/Images/FileView/Folder/folderopened_yellow_16.png" />

    <!-- 16 pixel Toggle icons visible command icon -->
    <BitmapImage x:Key="FLV_Image_IsIconVisible" UriSource="pack://application:,,,/CodeEditor;component/Resources/Images/FileView/appbar.image.macro.png" />

    <!-- 16 pixel Toggle hidden items visible command icon -->
    <BitmapImage x:Key="FLV_Image_IsHiddenFileVisible" UriSource="pack://application:,,,/CodeEditor;component/Resources/Images/FileView/IsHiddenVisible.png" />

    <BitmapImage x:Key="FLV_Image_IsFiltered" UriSource="pack://application:,,,/CodeEditor;component/Resources/Images/FileView/magnifying_glass.png" />
    
</ResourceDictionary>